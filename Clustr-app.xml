<application xmlns="http://ns.adobe.com/air/application/1.5">

  <id>com.clustr.Clustr</id>
  
  <version>2.0.1</version>
  
  <filename>Clustr</filename>
  
  <name>Clustr Desktop Application</name>
  
  <description>
    Access Huddle.net services from your desktop
  </description>
  
  <initialWindow>
    <content>Clustr.html</content>
    <systemChrome>none</systemChrome>
    <visible>true</visible>
    <width>380</width>
    <height>320</height>
    <minimizable>false</minimizable>
    <maximizable>false</maximizable>
    <resizable>true</resizable>
    <transparent>true</transparent>
  </initialWindow>
  
  <installFolder>Clustr</installFolder>
  
  <icon>
    <image16x16>imgs/icon16x16.png</image16x16>
    <image32x32>imgs/icon32x32.png</image32x32>
    <image48x48>imgs/icon48x48.png</image48x48>
    <image128x128>imgs/icon128x128.png</image128x128> 
  </icon>
  
  <allowBrowserInvocation>true</allowBrowserInvocation>
  
</application>